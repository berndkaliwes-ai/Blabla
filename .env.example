# XTTS V2 Voice Cloning Studio - Environment Configuration

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1

# Frontend Configuration
FRONTEND_PORT=3000

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0

# Model Configuration
XTTS_MODEL_PATH=tts_models/multilingual/multi-dataset/xtts_v2
XTTS_CACHE_DIR=/app/models

# Audio Processing
MAX_AUDIO_SIZE=52428800  # 50MB in bytes
MIN_AUDIO_DURATION=1.0   # seconds
MAX_AUDIO_DURATION=30.0  # seconds
TARGET_SAMPLE_RATE=22050

# Storage Configuration
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
VOICES_DIR=/app/voices
DATA_DIR=/app/data

# Logging
LOG_LEVEL=INFO
LOG_DIR=/app/logs

# Security (in production, use strong secrets)
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Performance
MAX_CONCURRENT_GENERATIONS=2
GENERATION_TIMEOUT=300  # seconds

# Development
DEBUG=false
RELOAD=false